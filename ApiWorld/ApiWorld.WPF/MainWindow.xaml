<Window x:Class="ApiWorld.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="525" Height="350"
        Title="Welcome to API World!">
    <Window.Resources>
        <DataTemplate x:Key="ApiItemTemplate">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Margin="8" Content="Load" Click="Button_Click"/>
        <ListBox Grid.Row="1" Margin="8,0,8,8"
                 ItemsSource="{Binding Apis}" ItemTemplate="{DynamicResource ApiItemTemplate}"/>
    </Grid>
</Window>
